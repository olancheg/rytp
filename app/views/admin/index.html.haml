= set_title :title => 'администрирование пользователей'

.admin
  = form_tag admin_index_path, :remote => true do
    = text_field_tag 'search', params[:search], :class => :title, :id => :user_search
  .users
    = render @users
  = paginate @users

- content_for :bottom_javascript do
  = javascript_include_tag 'jquery.observe_field'
  :javascript
    $("#user_search").observe_field(0.5, function( ) {
      $(this).parent().submit();
    });
