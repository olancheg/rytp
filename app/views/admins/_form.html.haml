= form_for admin do |f|
  - if admin.errors.any?
    #error_explanation
      %h2
        = pluralize(admin.errors.count, "error")+":"
      %ul
        - admin.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :login
    %br/
    = f.text_field :login
  .field
    = f.label :password
    %br/
    = f.text_field :password
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :policeman
    %br/
    = f.check_box :policeman
  .actions
    = f.submit
