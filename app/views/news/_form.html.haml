= form_for(@news) do |f|
  - if @news.errors.any?
    #error_explanation
      %h2
        = @news.errors.count
        = Russian.p(@news.errors.count, "ошибка", "ошибки", "ошибок")+":"
      %ul
        - @news.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :content
    %br/
    = f.text_area :content
  .field
    = f.label :photo
    %br/
    = f.text_field :photo
  .actions
    = f.submit
