!!! 5
%html
  %head
    %title #{title}
    %meta(content="text/html; charset=UTF-8" http-equiv="Content-Type")
    %link(rel="shortcut icon" href="/favicon.ico")
    %meta(name="description" content="RYTP.ru является наилучшим источником RYTP и RYTPMV") 
    %meta(name="Keywords" content="rytp, rytpmv, rytp.ru, letsweb, letsweb.ru")
    %noscript
      %meta(http-equiv="refresh" content="0; URL=/badbrowser.html")
    = auto_discovery_link_tag(:rss, rss_feed_path+'.rss')
    = stylesheet_link_tag :all, :cache => true
    = javascript_include_tag :all, :cache => true
    = csrf_meta_tag
    %script(type="text/javascript" src="http://userapi.com/js/api/openapi.js?17")
    %script(type="text/javascript")
      \VK.init({ apiId: 2021578, onlyWidgets: true });
  %body
    #main
      #header
        .content
          #logo
            = link_to image_tag('/images/logo.png', :title => 'RYTP.ru'), root_path
          #search_box
            = form_tag('/search') do
              %input(type="text" name="search" id="search" placeholder="Что тебе нужно...")
          = render :partial => '/layouts/menu'
          = render :partial => '/layouts/admin_menu'
          = render :partial => '/layouts/dropdown_menu'
          = render :partial => '/layouts/activate_js'
      #container
        %table.content
          %tr
            %td.left
              = yield :left
            %td
              .content
                = yield
            %td.right
              = yield :right
      #footer
        .content
          = yield :comments
          #subfooter
            .letsweb #{link_to image_tag('/images/letsweb.jpg'), 'http://letsweb.ru', :target => '_blank'}
            .text
              %p
                %b RYTP.ru
                является наилучшим источником RYTP и RYTPMV.
              %p Сайт для любителей пупов, от letsweb.ru
            .counter
              = render :partial => 'layouts/counter'
          .clear
